extends layout 

block contenido
    .contenido-principal
        h1 #{nombrePagina}

        if errores 
            each error in errores
                .error= error.texto

        form.agregar-proyecto(action="/nuevo-proyecto", method="POST") 
            .campo
                label(for="nombre") Nombre del Proyecto:
                input#nombre(type="text", name="nombre", placeholder="Nombre del Proyecto")
            .campo.enviar
                input.boton(type="submit", value="Agregar")